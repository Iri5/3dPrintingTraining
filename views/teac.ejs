            </div>
            <table id="students" class="menu table">
                <tr>
                    <th>ФИО</th>
                    <th>Группа</th>
                    <th></th>
                </tr>
                <% for(let i=0; i<info.students.length; i++){ %>
                    <tr userId="<%= info.students[i].id %>">
                        <td class="fio">
                            <%= info.students[i].fio %>
                        </td>
                        <td class="gr">
                            <%= info.students[i].gr %>
                        </td>
                        <td>
                            <div data-action="show" class="eye-icon" title="Редактировать"></div>
                        </td>
                    </tr>
                    <%} %>
            </table>
        </div>
        <div class="students-info">
            <div class="students-info__title">

            </div>
            <div class="students-info__description"></div>
            <button class="students-info__button students-info__button_hidden"><a href="#"></a>Страница курса</button>
